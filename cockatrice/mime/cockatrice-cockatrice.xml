<?xml version="1.0"?>
<mime-info xmlns='http://www.freedesktop.org/standards/shared-mime-info'>
  <mime-type type="x-scheme-handle/cockatrice">
    <comment>Join a cockatrice game.</comment>
    <glob pattern="cockatrice://*"/>
    <!-- 
        cockatrice://server will bring up a server join dialogue.
        cockatrice://server?roomID=123&gameID=123 will bring up a game join dialogue
        Games with passwords can come as the form above and the form below if the
        password is specified.
        If the password is specified then the game join will have the password box
        filled in, otherwise the box will have no password in the box.
        cockatrice://server?roomID=123&gameID=123&password=abc123
      -->
  </mime-type>
  
  <mime-type type="application/cod:cockatrice">
    <comment>Cockatrice deck.</comment>
    <glob pattern="*.cod"/>
  </mime-type>
  
  <mime-type type="application/cor:cockatrice">
    <comment>Cockatrice replay.</comment>
    <glob pattern="*.cor"/>
  </mime-type>
</mime-info>
